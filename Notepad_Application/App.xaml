<Application x:Class="Notepad.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Notepad"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        
         <!--Brushes Light Mode-->
        <SolidColorBrush x:Key="PrimaryColorLight" Color="White"></SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryColorLight" Color="#E9E7E7"></SolidColorBrush>
        <SolidColorBrush x:Key="TextColorLight" Color="Black"></SolidColorBrush>
        
         <!--Brushes Dark Mode-->
        <SolidColorBrush x:Key="PrimaryColorDark" Color="#4A4A4A"></SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryColorDark" Color="#5E5E5E"></SolidColorBrush>
        <SolidColorBrush x:Key='TextColorDark' Color="White"></SolidColorBrush>
        
        <!--Font Sizes-->
        <sys:Double x:Key="FontNormal">16</sys:Double>
       
    </Application.Resources>
</Application>
