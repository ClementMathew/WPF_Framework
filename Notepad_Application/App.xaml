<Application x:Class="Notepad.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Notepad"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        
         <!--Brushes-->
        <SolidColorBrush x:Key="PrimaryColorLight" Color="White"></SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryColorLight" Color="#E9E7E7"></SolidColorBrush>
        <SolidColorBrush x:Key="TextColorLight" Color="Black"></SolidColorBrush>

        <!--Font Sizes-->
        <sys:Double x:Key="FontNormal">16</sys:Double>
       
    </Application.Resources>
</Application>
